@model IEnumerable<ESTReporting.EntityModel.Models.ServiceProgressReport>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Service Progress Reports</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home &nbsp; / &nbsp;</a>
            </li>
            <li>
                <a>Service Progress Reports &nbsp; / &nbsp;</a>
            </li>
            <li class="active">
                <strong>Index</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Basic Data Tables example with responsive plugin</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="ExceptionTable" class="table table-striped table-bordered table-hover dataTables-example" style="width:100%;">
                        <thead>
                            <tr>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.StartDateTime))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.EsteemExtractDateTime))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.BAMExportDateTime))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.ProcessSuccessFlag))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.ExceptionCountTotal))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.ServiceJobType))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.QueryStartParameters))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.QueryEndParameters))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.NewItemCount))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.LocationChangeCount))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.AssetTagChangeCount))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.DeployedCount))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.ReturnedCount))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.SwappedCount))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.RetiredCount))
                                </th>
                                <th>
                                    @Html.SpaceCapital(Html.DisplayNameFor(model => model.DisposedCount))
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartDateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EsteemExtractDateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BAMExportDateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProcessSuccessFlag)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExceptionCountTotal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServiceJobType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QueryStartParameters)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QueryEndParameters)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NewItemCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LocationChangeCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AssetTagChangeCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeployedCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReturnedCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SwappedCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RetiredCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DisposedCount)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "BAM_HardwareTemplate_From_Report", "BAM_Reporting", new { id = item.Id }, null)
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        var yourApp = yourApp || {};
        yourApp.Urls = yourApp.Urls || {};
        yourApp.Urls.baseUrl = '@Url.Content("~")';
        yourApp.Urls.editUserUrl= '@Url.Action("Edit","User")';
        $(document).ready(function () {
            var oTable = $('.dataTables-example').dataTable({
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../scripts/plugins/dataTables/swf/copy_csv_xls_pdf.swf"
                },
                "paging": true,
                "pagingType": "full_numbers",
                "order": [[0, "desc"]],
            });

            $(window).bind('resize', function () {
                oTable.fnAdjustColumnSizing();
            });

        });
    </script>
}